{
  "name": "@midas-capital/sdk",
  "repository": "git://github.com:midas-protocol/contracts.git",
  "version": "0.2.1",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "files": [
    "/dist/",
    "deployments.json"
  ],
  "scripts": {
    "test": "hardhat test",
    "test:hardhat": "hardhat test --parallel",
    "test:forge": "forge test",
    "test:forge:bsc": "forge test --fork-url ${FORK_URL_BSC} --fork-block-number ${FORK_BLOCK_NUMBER}",
    "test:forge:moonbeam": "forge test --fork-url https://rpc.api.moonbeam.network --fork-block-number ${FORK_BLOCK_NUMBER}",
    "test:forge:evmostestnet": "forge test --fork-url https://eth.bd.evmos.dev:8545 --fork-block-number ${FORK_BLOCK_NUMBER}",
    "test:bsc": "FORK_URL=${FORK_URL_BSC} FORK_BLOCK_NUMBER=${FORK_BLOCK_NUMBER} FORK_CHAIN_ID=56 hardhat test",
    "export": "hardhat export --export-all ./deployments.json",
    "build": "npm run build:forge && npm run typechain && npm run build:sdk ",
    "build:forge": "forge build",
    "build:sdk": "tsc -p tsconfig-sdk.json && tsc -p tsconfig-cjs.json",
    "clean": "hardhat clean && rm -rf ./lib ./dist ./out ./typechain",
    "typechain": "typechain --target ethers-v5 --out-dir './typechain' 'out/*/**.json'",
    "deploy:simulate:bsc:mainnet": "FORK_URL_BSC=${FORK_URL_BSC} FORK_BLOCK_NUMBER=${FORK_BLOCK_NUMBER} FORK_CHAIN_ID=56 hardhat deploy --tags simulate",
    "deploy:bsc:mainnet": "hardhat --network bsc deploy --tags prod",
    "prettier:sol": "prettier --write 'contracts/**/*.sol' 'contracts_forge/**/*.sol'",
    "prettier:ts": "prettier --write 'chainDeploy/**/*.ts' 'src/**/*.ts' 'deploy/**/*.ts' 'tasks/**/*.ts' 'test/**/*.ts'",
    "prettier": "npm run prettier:ts && npm run prettier:sol"
  },
  "keywords": [],
  "author": "Midas Capital",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "bufferutil": "^4.0.6",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.2",
    "hardhat": "^2.9.2",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-deploy": "^0.11.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3",
    "utf-8-validate": "^5.0.9"
  },
  "dependencies": {
    "@keydonix/uniswap-oracle-sdk": "^1.0.7",
    "@keydonix/uniswap-oracle-sdk-adapter": "^1.0.7",
    "@typechain/ethers-v5": "^10.0.0",
    "@types/bad-words": "^3.0.1",
    "bad-words": "^3.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.1",
    "prettier-plugin-solidity": "1.0.0-beta.19"
  }
}
