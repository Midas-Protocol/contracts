{
  "name": "@midas-capital/sdk",
  "repository": "git://github.com:midas-protocol/contracts.git",
  "version": "0.1.10",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "description": "",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "files": [
    "/dist/",
    "/artifacts",
    "deployments.json"
  ],
  "scripts": {
    "test": "hardhat test",
    "test:hardhat": "hardhat test --parallel",
    "test:forge": "forge test",
    "test:forge:bsc": "forge test --fork-url ${FORK_URL_BSC} --fork-block-number 16281867",
    "test:bsc": "FORK_URL=${FORK_URL_BSC} FORK_BLOCK_NUMBER=16281867 FORK_CHAIN_ID=56 hardhat test",
    "export": "hardhat export --export-all ./deployments.json",
    "build": "npm run build:hardhat && npm run build:sdk && npm run build:forge",
    "build:forge": "forge build",
    "build:hardhat": "hardhat compile",
    "build:sdk": "tsc -p tsconfig-sdk.json && tsc -p tsconfig-cjs.json",
    "clean": "hardhat clean && rm -rf lib",
    "deploy:simulate:bsc:mainnet": "FORK_URL=${FORK_URL_BSC} FORK_BLOCK_NUMBER=16281867 FORK_CHAIN_ID=56 hardhat node --tags simulate",
    "deploy:bsc:mainnet": "hardhat --network bsc deploy --tags prod",
    "prettier:sol": "prettier --write 'contracts/**/*.sol' 'contracts_forge/**/*.sol'",
    "prettier:ts": "prettier --write 'chainDeploy/**/*.ts' 'src/**/*.ts' 'deploy/**/*.ts' 'tasks/**/*.ts' 'test/**/*.ts'",
    "prettier": "npm run prettier:ts && npm run prettier:sol"
  },
  "keywords": [],
  "author": "Midas Capital",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "@typechain/hardhat": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.10",
    "bufferutil": "^4.0.6",
    "chai": "^4.3.4",
    "dotenv": "^14.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.9.1",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-deploy": "^0.9.27",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "ts-node": "^10.5.0",
    "typechain": "^7.0.1",
    "typescript": "^4.6.2",
    "utf-8-validate": "^5.0.8"
  },
  "dependencies": {
    "@keydonix/uniswap-oracle-contracts": "^1.0.6",
    "@keydonix/uniswap-oracle-sdk": "^1.0.7",
    "@keydonix/uniswap-oracle-sdk-adapter": "^1.0.7",
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.0",
    "@rari-capital/solmate": "^6.2.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/bad-words": "^3.0.1",
    "@uniswap/v3-core": "^1.0.0",
    "@uniswap/v3-periphery": "github:Uniswap/uniswap-v3-periphery#pull/96/head",
    "bad-words": "^3.0.4",
    "lint-staged": "12.2.1",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19"
  }
}
